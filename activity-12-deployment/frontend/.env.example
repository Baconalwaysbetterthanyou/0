# Frontend Environment Variables Example
# Copy this file to .env.local for local development
# Set these in Netlify dashboard: Site settings > Build & deploy > Environment

# TODO 2: Configure Environment Variables (Medium)
# API Configuration - UPDATE THESE FOR PRODUCTION
REACT_APP_API_URL=https://your-api.railway.app
REACT_APP_API_KEY=your-production-api-key
REACT_APP_ENVIRONMENT=production

# Analytics and Monitoring - OPTIONAL BUT RECOMMENDED
REACT_APP_GOOGLE_ANALYTICS=GA-XXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_HOTJAR_ID=your-hotjar-site-id

# Feature Flags
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_DARK_MODE=true

# Social Login (if implemented)
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_GITHUB_CLIENT_ID=

# Map Integration (if using maps)
REACT_APP_MAPBOX_TOKEN=
REACT_APP_GOOGLE_MAPS_KEY=

# Payment Integration (if implemented)
REACT_APP_STRIPE_PUBLISHABLE_KEY=

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_VERSION=$npm_package_version

# Development Settings
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true